{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "fetch": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "mcp/fetch"],
      "enabled": true
    },
    "time": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "mcp/time"],
      "enabled": true
    }
  }
}
